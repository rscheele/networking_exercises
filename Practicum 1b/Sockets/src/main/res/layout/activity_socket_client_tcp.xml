<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rodi.socket.Sockets">

    <TextView
        android:id="@+id/socketText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/button3"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:onClick="runUdpClient"
            android:text="UDP Client"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="165dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:onClick="runTcpClient"
            android:text="TCP Client"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="34dp" />

        <Button
            android:id="@+id/button4"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:onClick="runTcpServer"
            android:text="TCP Server"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="34dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:onClick="runUdpServer"
            android:text="UDP Server"
            tools:layout_editor_absoluteX="156dp"
            tools:layout_editor_absoluteY="34dp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>